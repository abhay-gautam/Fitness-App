<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


                                                                              /1st
        <androidx.cardview.widget.CardView
           android:id="@+id/chest_id"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="15dp"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_margin="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gym_b">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="220dp"
                    android:layout_marginBottom="80dp"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:fontFamily="@font/rammetto_one"
                    android:padding="20dp"
                    android:text="Chest"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

                                                                                         /2nd

        <androidx.cardview.widget.CardView
            android:id="@+id/arms_id"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gym_f">

                <Button
                    android:id="@+id/clickarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rammetto_one"
                    android:text="Arms"
                    android:layout_marginRight="220dp"
                    android:layout_marginBottom="80dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:background="#00000000"

                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


                                                                                         /3rd
        <androidx.cardview.widget.CardView
            android:id="@+id/legs_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gym_l">

                <Button
                    android:id="@+id/clickleg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Legs"
                    android:layout_marginRight="220dp"
                    android:layout_marginBottom="80dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rammetto_one"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

                                                                                           /4th
        <androidx.cardview.widget.CardView
            android:id="@+id/abs_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gym_h">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abs"
                    android:layout_marginRight="220dp"
                    android:layout_marginBottom="60dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:background="#00000000"
                    android:textSize="20dp"
                    android:fontFamily="@font/rammetto_one"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


                                                                                        /5th
        <androidx.cardview.widget.CardView
            android:id="@+id/shoulder_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gym_i">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shoulders"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:background="#00000000"
                    android:layout_marginRight="160dp"
                    android:layout_marginBottom="60dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/rammetto_one"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


                                                                                /6th
        <androidx.cardview.widget.CardView
            android:id="@+id/fullbody_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gym_n">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Body"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:background="#00000000"
                    android:textSize="20dp"
                    android:layout_marginRight="160dp"
                    android:fontFamily="@font/rammetto_one"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


                                                                             /7th
        <androidx.cardview.widget.CardView
            android:id="@+id/lowerbody_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gym_p">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lower Body"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:layout_marginRight="170dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/rammetto_one"
                    android:background="#00000000"
                    android:textSize="20dp"
                    android:padding="20dp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



















    </LinearLayout>
</ScrollView>